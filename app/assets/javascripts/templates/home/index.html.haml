.home-container{ ng_controller: 'homeCtrl' }

  %p{ ng_show:  "signedIn()" }
    Welcome {{ user.email }}

  #search
    %label{for: 'search-input'}
      %i.fa.fa-search
    %input.form-control.search-query{ id: 'search-input' , ng_model: 'searchRecipe',placeholder:'Search'}
    %a.fa.fa-times-circle{ id: 'search-clear', tabindex:'1' , ng_show:'searchRecipe' , ng_click:'searchRecipe = null'}

  #recipes
    %div{ ng_repeat: 'recipe in recipes'}
      .recipe.row
        .recipe_image.col-sm-3
          %img{src: '/assets/Cre.jpg'}
        .recipe_content.col-sm-9
          .title
            %a{ ng_href: '#/recipe?id={{recipe.id}}'} {{recipe.title}}
          %p  {{recipe.description | cut_max_caracters:true:100:'...'}}

        .recipe_content.pull-right
          .username
            publi√©: {{recipe.created_at | date:" dd/MM/yyyy"}} par {{recipe.username}}
