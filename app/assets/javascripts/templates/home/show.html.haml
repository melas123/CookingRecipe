%div{ ng_controller: "showCtrl" }
  .row
    recipe id = {{id}}
    #recipe_show.col-sm-8
      %h1 {{recipe.title}}
      %p.username
        publié: {{recipe.created_at | date:" dd/MM/yyyy 'à' HH:mm"}} par {{recipe.username}}
      .clearfix
        .recipe_image_description
          %img{src: '/assets/Cre.jpg'}
          .description
            {{recipe.description}}
      %h2  Ingrédients
      %ul
        %li{ng_repeat: 'ingridient in ingridients'}
          {{ingridient.name}}
  .row.text-center
    %h2 Commentaires(0)
    %hr
  .row
    .col-sm-3
      %img.logo{src: "assets/avatar_homme.jpg"}
      {{user.name}}
    .col-sm-9
      %textarea.form-control{placeholder:"commentaire ..."}
  .spacer2
